<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tombolRadio">

    <RadioGroup
        android:id="@+id/radioGroupPosisi"
        android:layout_width="135dp"
        android:layout_height="95dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="45dp">

        <RadioButton
            android:id="@+id/radioKiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rata Kiri" />

        <RadioButton
            android:id="@+id/radioTengah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ditengahkan" />

        <RadioButton
            android:id="@+id/radioKanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rata Kanan" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konnichiwa Sekai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>